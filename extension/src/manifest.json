{
  "manifest_version": 3,
  "name": "Thaumic Cast",
  "description": "Cast any browser tab's audio to your Sonos speakers",
  "version": "0.1.0",
  "permissions": ["tabCapture", "offscreen", "storage", "tabs", "webNavigation"],
  "host_permissions": ["https://*/*", "http://*/*"],
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["src/content/media-reader.ts"],
      "run_at": "document_idle",
      "world": "MAIN"
    },
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["src/content/media-bridge.ts"],
      "run_at": "document_idle",
      "world": "ISOLATED"
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  },
  "background": {
    "service_worker": "src/background.ts",
    "type": "module"
  },
  "action": {
    "default_popup": "src/popup/index.html",
    "default_title": "Thaumic Cast"
  },
  "options_page": "src/options/index.html",
  "web_accessible_resources": [
    {
      "resources": ["audio-worklet.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
