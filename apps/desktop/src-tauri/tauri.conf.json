{
  "productName": "Thaumic Cast",
  "version": "0.10.4",
  "identifier": "com.thaumic-cast.desktop",
  "build": {
    "beforeDevCommand": "bun run dev",
    "beforeBuildCommand": "bun run build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist",
    "removeUnusedCommands": true
  },
  "app": {
    "windows": [
      {
        "title": "Thaumic Cast",
        "width": 840,
        "height": 560,
        "minWidth": 480,
        "minHeight": 360,
        "visible": false,
        "acceptFirstMouse": true,
        "tabbingIdentifier": null,
        "zoomHotkeysEnabled": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; connect-src ipc: http://ipc.localhost; style-src 'self' 'unsafe-inline'"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "category": "public.app-category.music",
    "copyright": "Â© 2026 Thaumic Cast",
    "shortDescription": "Stream browser audio to Sonos over your local network. Self-hosted, fast, private.",
    "publisher": "Thaumic Cast",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.ico",
      "icons/icon.png"
    ],
    "macOS": {
      "signingIdentity": "-",
      "minimumSystemVersion": "12.0"
    }
  }
}
