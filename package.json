{
  "name": "thaumic-cast-monorepo",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:desktop": "bun run --filter @thaumic-cast/desktop tauri dev",
    "dev:extension": "bun run --filter @thaumic-cast/extension dev",
    "build": "bun run --filter '*' build",
    "typecheck": "bun run --filter '*' typecheck",
    "lint": "eslint . && stylelint '**/*.css'",
    "lint:fix": "eslint . --fix && stylelint '**/*.css' --fix",
    "changeset": "changeset",
    "changeset:version": "changeset version && bun run sync-versions",
    "changeset:publish": "bun run build && changeset publish",
    "sync-versions": "bun run scripts/sync-versions.ts",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.css": [
      "stylelint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ],
    "*.rs": [
      "rustfmt --edition 2021"
    ]
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.8",
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@types/bun": "^1.2.14",
    "bun-types": "^1.3.5",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jsdoc": "^61.5.0",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "stylelint": "^16.0.0",
    "stylelint-config-standard": "^37.0.0",
    "typescript-eslint": "^8.50.0"
  }
}
