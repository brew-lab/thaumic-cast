{
  "name": "thaumic-cast-monorepo",
  "private": true,
  "license": "AGPL-3.0",
  "author": {
    "name": "Brew",
    "url": "https://thisisbrew.com/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/brew-lab/thaumic-cast.git"
  },
  "homepage": "https://github.com/brew-lab/thaumic-cast",
  "bugs": "https://github.com/brew-lab/thaumic-cast/issues",
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "packageManager": "bun@1.3.3",
  "engines": {
    "bun": ">=1.0.0"
  },
  "scripts": {
    "dev:desktop": "bun run --filter @thaumic-cast/desktop --elide-lines=0 tauri dev",
    "dev:extension": "bun run --filter @thaumic-cast/extension --elide-lines=0 dev",
    "build": "bun run --filter '*' build",
    "build:extension": "bun run --filter @thaumic-cast/extension build",
    "build:desktop": "bun run --filter @thaumic-cast/desktop tauri build",
    "build:desktop:windows": "bun run --filter @thaumic-cast/desktop tauri build --target x86_64-pc-windows-msvc",
    "build:desktop:linux": "bun run --filter @thaumic-cast/desktop tauri build --target x86_64-unknown-linux-gnu",
    "build:desktop:macos": "bun run --filter @thaumic-cast/desktop tauri build --target aarch64-apple-darwin",
    "clean": "bun run --filter '*' clean",
    "test": "bun run --filter '*' test",
    "typecheck": "bun run --filter '*' typecheck",
    "lint": "eslint . && stylelint '**/*.css'",
    "lint:fix": "eslint . --fix && stylelint '**/*.css' --fix",
    "changeset": "changeset",
    "changeset:version": "changeset version && bun run sync-versions",
    "changeset:publish": "bun run build && changeset publish",
    "sync-versions": "bun run scripts/sync-versions.ts",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.css": [
      "stylelint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml,html}": [
      "prettier --write"
    ],
    "*.rs": [
      "rustfmt --edition 2021"
    ]
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.8",
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@types/bun": "^1.2.14",
    "eslint": "^10.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jsdoc": "^62.1.0",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "stylelint": "^17.0.0",
    "stylelint-config-standard": "^40.0.0",
    "stylelint-use-logical": "^2.1.2",
    "typescript-eslint": "^8.50.0"
  }
}
