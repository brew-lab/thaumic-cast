{
  "name": "thaumic-cast",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*",
    "server",
    "server/ui",
    "extension",
    "desktop"
  ],
  "scripts": {
    "setup": "./scripts/setup.sh",
    "dev": "bun run --filter '*' --filter '!@thaumic-cast/desktop' dev",
    "build": "bun run --filter '*' --filter '!@thaumic-cast/desktop' build",
    "lint": "eslint .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "bun run --filter '*' --filter '!@thaumic-cast/desktop' typecheck",
    "prepare": "husky",
    "desktop:dev": "cd desktop && cargo tauri dev",
    "desktop:build": "cd desktop && cargo tauri build",
    "desktop:icons": "cd desktop && cargo tauri icon src-tauri/icons/icon.png && rm -rf src-tauri/icons/ios src-tauri/icons/android src-tauri/icons/mipmap-* src-tauri/icons/AppIcon-* src-tauri/icons/Square* src-tauri/icons/StoreLogo* src-tauri/icons/*.icns"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "bun-types": "^1.3.3",
    "eslint": "^9.39.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.1",
    "typescript": "^5.9.3"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css,html}": [
      "prettier --write"
    ]
  }
}
